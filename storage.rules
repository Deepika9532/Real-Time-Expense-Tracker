rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write their own files
    match /users/{userId}/{fileType}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload/read receipt images
    match /receipts/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload/read profile pictures
    match /profile_pictures/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload/read backup files
    match /backups/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }

  // Deny access to all other files
  match /b/{bucket}/o/{allPaths=**} {
    allow read, write: if false;
  }
}